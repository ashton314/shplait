#lang rhombus/static/and_meta
import:
  meta:
    "type.rhm" as t
  "type_statinfo.rhm" as t_s
  "unify.rhm".unify

export:
  rename:
    shblock as block

expr.macro 'shblock:
              $defn
              ...
              $expr':
  ~op_stx self
  let tv = t.gen_tvar(#false)
  let e:
    'unify ~expr $(t_s.type_to_syntax(tv)):
       ~init_tvars: []
       ~defns:
         $defn
         ...           
       ~body: $expr'
  t_s.wrap_type(e, tv)
